<IntroScreen>:
    FloatLayout:
        #Image:
        #    source : "images/intro_background.jpg"
        #    allow_stretch : True
        #    keep_ratio : False
        #    size : (2000,1200)
        #    pos_hint: {"center_x":0.5}
        MDTextFieldRound:
            id : flight_number_field
            icon_left: 'airplane'
            icon_type: "left"
            hint_text: "Flight number"
            size_hint : (0.4 , 0.05)
            pos_hint : {"center_x":0.5,"center_y":0.65}
            normal_color :[0.9 , 0.9 , 0.9 , .8]
            foreground_color : [0.1 , 0.1 , 0.1 , 1]
        MDRoundFlatButton:
            text : "Guide me"
            size_hint : (0.3 , 0.07)
            pos_hint:{"center_x":0.5,"center_y":0.55}
            on_press : root.manager.current = "GeneralOverViewScreen"

<GeneralOverViewScreen>:

    FloatLayout:

        MDTabs:
            id: android_tabs
            #size_hint : (1,1)
            #pos : (0,0)

        MDProgressBar:
            #hint : False
            value : 20
            size_hint : (0.9 , 0.1)
            pos_hint : {"center_x":0.5,"bottom":0.1}

        MDLabel:
            text : "Start time"
            font_style: "Caption"
            size : (150 , 50)
            pos_hint : {"center_x": 0.55, "center_y": 0.075}

        MDLabel:
            text : "End time"
            font_style: "Caption"
            size : (150 , 50)
            pos_hint : {"center_x": 1.4, "center_y": 0.075}

<personalTab>:
    name : "personalTimeTab"
    text : "Personal time"

    FloatLayout:
        MDTextFieldRound:
            hint_text: "Search for gastronomy, shops, ..."
            icon_type: "left"
            icon_left: "magnify"
            normal_color : [0.7,0.7,0.7,.8]
            size_hint : (0.8 , 0.1)
            pos_hint:{'center_x':0.5, 'center_y':0.9}

<timetableTab>:
